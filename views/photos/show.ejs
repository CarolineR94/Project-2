<div class="row">
  <div class="col s12 m4">
    <div class="card">

      <div class="card-image">
        <img src="<%= photo.url %>">
      </div>

      <div class="card-content">

        <% if(photo.user) { %>
        <p><%= photo.user.username %></p>
        <% } %>

        <p><%= photo.caption %></p>


        <% photo.comments.forEach(comment => { %>
          <div>
            <p><strong><%= comment.user.username %></strong><%= comment.content %></p>
            
            <form action="/photos/<%= photo.id %>/comments/<%= comment.id %>" method="post">
              <input type="hidden" name="_method" value="delete">
              <button type="submit">Delete Comment</button>
            </form>
          </div>
        <% }) %>




        <div class="card-action">
          <div class="input-field">
            <form class="add-comment" action="/photos/<%= photo.id %>/comments" method="post">
              <textarea id="textarea<%= photo._id %>" class="materialize-textarea" name="content" placeholder="Add comment..."></textarea>
              <button type="submit" name="button"><i class="material-icons">send</i></button>
            </form>
          </div>
        </div>





    </div>
  </div>
</div>
