<div class="row">
  <div class="col s12 m4">
    <div class="card">

      <div class="card-image">
        <img src="<%= photo.url %>">
      </div>

      <div class="card-content">

        <% if(photo.user) { %>
        <p><%= photo.user.username %></p>
        <% } %>

        <p><%= photo.caption %></p>


        <% photo.comments.forEach(photo => { %>
        <p><%= photo.comments %></p>
        <% }) %>

        <div class="card-action">
          <div class="input-field">
            <textarea id="textarea<%= photo._id %>" class="materialize-textarea"></textarea>
            <label for="textarea<%= photo._id %>">Add comment...</label>
          </div>
        </div>
        
      </div>




    </div>
  </div>
</div>
